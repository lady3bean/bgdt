<h1><%= link_to 'Manage Accounts', accounts_path %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Balance</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.name %></td>
        <td><%= number_to_currency(account.balance) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'entries/form' %>

<h1>Browse By Category</h1>
<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Balance</th>
      <th>Entries</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to "#{category.cat}", category_path(category) %></td>
        <td><%= number_to_currency(category.entries.sum(:amount))%></td>
        <td> <%= category.entries.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h1><%= link_to 'New Category', new_category_path %></h1>